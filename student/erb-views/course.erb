    <% if $data.msg %>
    <%= $data.msg %>
    <% end %>
    
    <div class="content">

<h3>Course Editing</h3>

<form action="/course" method="POST" >

  <fieldset>  
  <% if not $c._id %>
    <legend>New Course</legend>
  <%= $c._form.hidden( "_new" , true ) %>
  <% end %>

  <%= $c._form.id() %>

    <label>Name</label>
    <%= $c._form.text( "name" ) %><br />
    
    <label></label>	
  	<%= $c._form.submit( "action" , "Save" ) %><br />

  </fieldset>

</form>
    
    </div>

  </body>
